{
  "compilerOptions": {
    "lib": ["dom", "ES6"],
    "outDir": "./lib/cjs/",
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  //added .json files to include for the internationalization
  "include": ["src/**/*.ts*", "src/**/*.json", "vite.config.ts",  "./**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "lib", "coverage"]
}
